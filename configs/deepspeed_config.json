{
    "bf16": {
            "enabled": true
        },
    "zero_optimization": {
        "stage": 3,
        "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true
        },
        "allgather_partitions": true,
        "allgather_bucket_size": 2e8,
        "overlap_comm": true,
        "reduce_scatter": true,
        "reduce_bucket_size": 2e8,
        "contiguous_gradients": true
    },
    "optimizer": {
		"type": "AdamW",
		"params": {
		  "lr": "auto",
		  "betas": [
			0.9,
			0.999
		  ],
		  "eps": 1e-08
		}
	  },
    "scheduler": {
      "type": "WarmupLR",
      "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 1e-3,
      "warmup_num_steps": 1000,
      "warmup_type": "cosine"
      }
    },
    "num_machines": 1,
    "num_processes": 1,
    "num_epochs": 100,
    "gradient_clipping": 1.0,
    "gradient_accumulation_steps": 0,
    "steps_per_print": 2000,
    "train_micro_batch_size_per_gpu": 1,
    "val_micro_batch_size_per_gpu": 1,
    "train_batch_size": 1,
    "wall_clock_breakdown": false,
    "log_grads_every": 1000
}